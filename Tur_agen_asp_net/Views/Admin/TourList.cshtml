@model IEnumerable<Tur_agen_asp_net.Models.Tour>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TourList</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TName_tour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TTown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TName_tour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TTown)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_tour">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_tour">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_tour">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
