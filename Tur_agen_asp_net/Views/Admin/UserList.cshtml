@model IEnumerable<Tur_agen_asp_net.Models.Users>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserList</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ULogin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UIsAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ULogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UIsAdmin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_users">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_users">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_users">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
